{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"], 
    "strict": true, 
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
